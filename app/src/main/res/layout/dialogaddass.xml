<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quick Assignment Creation Form"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="50dp"
        android:hint="Enter Assignment name"
        android:id="@+id/txtassName"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="50dp"
        android:hint="Enter Assignment Description"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="12"
        android:lines="6"
        android:scrollbars="vertical"
        android:id="@+id/txtassDesc"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="75dp"
        android:layout_marginBottom="30dp"
        android:text="Set Due-Date"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_medium"
        android:id="@+id/btnsetDueDate"/>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="35dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/purple_500"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:id="@+id/txtassCancel"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/purple_500"
            android:layout_weight="1"
            android:id="@+id/txtassOk"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>