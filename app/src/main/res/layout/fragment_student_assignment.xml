<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StudentAssignmentDialogFrag">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="2dp"
        app:title="Assignment Overview"
        style="@style/Widget.MaterialComponents.Toolbar.PrimarySurface"
        android:layout_marginBottom="30dp"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:id="@+id/StudAssToolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/StudAssLt"
        >

        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtStudAssName"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:text="Assignment Name"
            android:textAlignment="center"
            android:padding="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:layout_marginHorizontal="55dp"
                android:indeterminate="true"
                app:indicatorColor="#00E317"
                app:indicatorSize="75dp"
                android:id="@+id/markIndicator"
                app:trackColor="#969696"
                android:layout_weight="1"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="25dp">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtStudAssMark"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black"
                    android:text="Mark: "
                    android:textSize="15sp"/>

                <TextView
                    android:layout_marginVertical="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtStudGroupName"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black"
                    android:text="Group Name: "
                    android:textSize="15sp"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="17sp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_bold"
                android:text="Project Description:"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/studassdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="13sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnLeave"
                android:text="Leave Group"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginHorizontal="50dp"/>

            <Button
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnCreate"
                android:text="Create Group"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginHorizontal="50dp"/>

            <Button
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnJoin"
                android:text="Join Group"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginHorizontal="50dp"/>

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/newgrplt"
                    android:padding="10dp"
                    android:visibility="gone">
                    <!--Section for creating a new Group-->
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="180dp"
                        android:hint="Enter Group Name"
                        android:id="@+id/txtGroupName"
                        android:layout_centerHorizontal="true"/>

                    <EditText
                        android:layout_below="@+id/txtGroupName"
                        android:minWidth="180dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:layout_marginHorizontal="50dp"
                        android:hint="Enter Group Description"
                        android:inputType="textMultiLine"
                        android:minLines="2"
                        android:maxLines="12"
                        android:lines="4"
                        android:scrollbars="vertical"
                        android:id="@+id/txtGroupDesc"
                        android:layout_margin="15dp"
                        android:layout_centerHorizontal="true"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/txtGroupDesc"
                        android:text="Submit"
                        android:id="@+id/btnAddGroup"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/joingrplt"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="15dp"
                        android:id="@+id/txtgrouplistinfo"
                        android:text="Click on the Group you wish to join (Please ensure you have permission from group creator first)"/>

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="420dp"
                        android:id="@+id/grouplist"
                        android:padding="10dp"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="visible"
        android:id="@+id/StudAssLoading"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>